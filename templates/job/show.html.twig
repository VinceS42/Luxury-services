{% extends 'base.html.twig' %}

{% block title %}Job{% endblock %}

{% block body %}
<section class="single-project-section section-padding light-gray-bg">
            <div class="container">
                <div class="project-overview">
                    <div class="row mb-80">
                        <div class="col-xs-12 col-md-8">
                            <p class="ref grey-text no-margin">{{ job.reference }}</p>
                            <h2>{{ job.getTitleOffer }}</h2>
                            <p> {{ job.description }}</p>
                        </div>

                        <div class="col-xs-12 col-md-4 quick-overview">
                            <ul class="portfolio-meta">
                                <li><span> Pulished at </span>{{ job.getCreatedAt|date('Y-m-d') }}</li>
                                <li><span> Position </span>{{ job.jobCategory }}</li>
                                <li><span> Contract Type </span>{{ job.jobType }}</li>
                                <li><span> Salary </span>{{ job.salary }}&euro;</li>
                                <li><span> Location </span>{{ job.location }}</li>
                                <li><span> Starting date </span>{{ job.getStratedAt|date('Y-m-d') }}</li>
                            </ul>
                            <a class="btn btn-block gradient primary mt-30 waves-effect waves-light" href="{{ path('app_candidature_new', {'id': job.id}) }}">Apply for this job</a>
                            <div class="btn btn-block btn-success mt-30 waves-effect waves-light disabled">You have applied for this job</div>
                        </div>
                    </div>
                </div>

                <nav class="single-post-navigation no-margin" role="navigation">
                    <div class="row">

                        <div class="col-xs-6 col-sm-6 col-md-4">
                            <div class="previous-post-link">
                                <a class="btn border primary waves-effect waves-dark" href="#!">
                                    <i class="fa fa-long-arrow-left"></i>Previous
                                </a>
                            </div>
                        </div>
                        <div class="hidden-xs hidden-sm col-md-4"></div>


                        <div class="col-xs-6 col-sm-6 col-md-4">
                            <div class="next-post-link">
                                <a class="btn border primary waves-effect waves-dark" href="#">
                                    Next <i class="fa fa-long-arrow-right"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </nav>
            </div>
        </section>

{% endblock %}
